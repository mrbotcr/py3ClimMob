<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="{{ request.url_for_static('landing/icon.png') }}">

    <title>{{ _("ClimMob | Two-Factor Setup") }}</title>
    {% cssresource request,'coreresources','style' %}
    {% cssresource request,'coreresources','sweet' %}
</head>

<body>
    <div id="wrapper">
        <!-- Modal para 2FA -->
        <div class="modal inmodal" id="twoFactorModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content animated fadeIn">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">{{ _("Setup Two-Factor Authentication") }}</h4>
                    </div>
                    <div class="modal-body">
                        <form method="post" class="form-horizontal" action="{{ request.path }}">
                            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">

                            <!-- Selección de método -->
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{ _("2FA Method") }}</label>
                                <div class="col-sm-10">
                                    <select id="two_fa_method" name="two_fa_method" class="form-control" required>
                                        <option value="app" {% if data.two_fa_method == "app" %}selected{% endif %}>
                                            {{ _("Authenticator App") }}
                                        </option>
                                        <option value="email" {% if data.two_fa_method == "email" %}selected{% endif %}>
                                            {{ _("Email") }}
                                        </option>
                                    </select>
                                </div>
                            </div>

                            <!-- QR Code -->
                            {% if otp_qr_code and data.two_fa_method == "app" %}
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{ _("Scan QR Code") }}</label>
                                <div class="col-sm-10">
                                    <img src="{{ otp_qr_code }}" alt="QR Code" style="max-width: 300px;" />
                                    <p>{{ _("Scan this code with your authenticator app.") }}</p>
                                </div>
                            </div>
                            {% endif %}

                            <!-- Códigos de un solo uso -->
                            {% if one_time_codes %}
                            <div class="alert alert-info">
                                <h5>{{ _("Your One-Time Codes") }}</h5>
                                <p>{{ _("Use these codes if you cannot access your authenticator app or email OTP.") }}</p>
                                <ul>
                                    {% for code_obj in one_time_codes %}
                                    <li>{{ code_obj.code }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                            {% endif %}

                            <!-- Botón -->
                            <div class="form-group">
                                <div class="col-sm-10 col-sm-offset-2">
                                    <button type="submit" name="generate" class="btn btn-primary">
                                        {{ _("Generate/Update 2FA") }}
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal" onclick="redirectToLogin()">{{ _("Close") }}</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Fin del modal -->
    </div>

    <!-- Scripts -->
    {% jsresource request,'coreresources','sweet' %}
    <script>
        $(document).ready(function () {
            // Mostrar modal al cargar la página
            $('#twoFactorModal').modal('show');
        });
        function redirectToLogin() {
            window.location.href = "{{ request.route_url('login') }}";
        }
    </script>
</body>

</html>
