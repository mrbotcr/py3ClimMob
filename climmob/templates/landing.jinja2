                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">{{ _("Toggle navigation") }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% block mainbutton %}
                        <a class="navbar-brand" href="{{ request.route_url('login') }}">{{ _("Login or request an account") }}</a>
                    {% endblock mainbutton %}
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right" style="background-color: rgba(160,160,160, 0.8);">
                        {% block navitems %}
                            <li><a class="page-scroll" href="#page-top">{{ _("Home") }}</a></li>
                            <li><a class="page-scroll" href="#features">{{ _("Features") }}</a></li>
                            <li><a class="page-scroll" href="#team">{{ _("Join us") }}</a></li>
{#                            <li><a class="page-scroll" href="#pricing">Pricing</a></li>#}
                            <li><a class="page-scroll" href="#contact">{{ _("Contact") }}</a></li>
                        {% endblock navitems %}
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    {% block carousel %}
        <div id="inSlider" class="carousel carousel-fade" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#inSlider" data-slide-to="0" class="active"></li>
                <li data-target="#inSlider" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                {% block carouselitems %}
                    <div class="item active">
                        <div class="container">
                            <div class="carousel-caption">
                                <h1>{{ _("Welcome to ") }}<span style="color: #1ab492">ClimMob</span><br/>
                                    {{ _("Scaling ") }}<br/>{{ _("end-user") }}<br/>{{ _("testing") }}</h1>
                                <p>{{ _("Design and analyse agricultural trials in a") }} <span style="color: #1ab492">{{ _("smart way") }}.</span></p>
{#                                <p>#}
{#                                    <a class="btn btn-lg btn-primary" href="#features" role="button">READ MORE</a>#}
{#                                </p>#}
                            </div>
                            <div class="carousel-image wow zoomIn">
                                <img src="{{ request.url_for_static('landing/person.png') }}" alt="person"/>
                            </div>
                        </div>
                        <!-- Set background for slide in css -->
                        <div class="header-back" style="background: url({{ request.url_for_static('landing/banner1.jpg') }}) 50% 0 no-repeat;"></div>

                    </div>
                    <div class="item">
                        <div class="container">
                            <div class="carousel-caption blank">
                                <h1>{{ _("Ready for use") }}<span style="color: #1ab492">{{ _("by private sector") }}</span></h1>
                                <p>{{ _("Testing new technology options on farms will accelerate agricultural development") }} <br/><span style="color: #1ab492">ClimMob</span> {{ _("will assist you in deploying") }} <span style="color: #1ab492">{{ _("large-scale") }}</span> {{ _("on-farm trials") }}<br/>{{ _("across") }} <span style="color: #1ab492">{{ _("multiple") }}</span> {{ _("locations") }}</p>
{#                                <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>#}
                            </div>
                        </div>
                        <!-- Set background for slide in css -->
                        <div class="header-back" style="background: url({{ request.url_for_static('landing/banner2.png') }}) 50% 0 no-repeat;"></div>
                    </div>
                {% endblock carouselitems %}
            </div>
            <a class="left carousel-control" href="#inSlider" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">{{ _("Previous") }}</span>
            </a>
            <a class="right carousel-control" href="#inSlider" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">{{ _("Next") }}</span>
            </a>
        </div>
    {% endblock carousel %}

    {% block features %}
        <section id="features" {% block features_class %}class="container services"{% endblock features_class %}>
            <div class="text-center">
                <div class="navy-line"></div>
                <h1>{{ _("Features") }}</h1>
            </div>
            <div class="row">
                {% block feature_items %}
