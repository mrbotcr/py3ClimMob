{% block pagecontent %}

    {% if hasActiveProject %}
        <div class="row">
            {% if Products %}
                <div style="width: 100%; text-align: center">
                    <h3><b>{{ _("Push button to see if pending documents are ready.") }}</b></h3>
                    <a class="btn btn-primary " onclick=" location.reload(); "><i class="fa fa-refresh"></i> {{ _("Refresh") }}</a>
                    <br><br>
                </div>
                <div class="col-lg-12" id="content_product">
                    {% snippet 'snippets/project/productsList/productsList.jinja2', request= request, Products=Products, activeProject=activeProject%}
                </div>
            {% else %}
                <div style="width: 100%; text-align: center">
                    <h3><b>{{ _("You haven't files to download.") }}</b></h3>
                    <a href="{{ request.route_url('generateProduct', productid="generalreport", projectid=activeProject.project_cod, processname="generalreport") }}" class="btn btn-default" ><i class="fa fa-plus"></i> {{ _("Create project summary") }}</a>
                </div>
            {% endif %}

        </div>
    {% else %}
        <div class="middle-box text-center loginscreen animated fadeInDown">
            <h3><b>{{ _("To download files you need to have an active project.") }}</b></h3>
        </div>
    {% endif %}

{% endblock pagecontent %}