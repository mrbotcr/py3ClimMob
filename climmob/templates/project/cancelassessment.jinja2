{% extends 'dashboard/dashboard.jinja2' %}

{% block title %}
    <title>{{ _("ClimMob | Cancel data collection") }}</title>
{% endblock title %}

{% block pageheading %}
    {% snippet 'snippets/menuheading.jinja2', request=request, _title= _("Cancel assessment"), _linkWiki="https://climmob.net/blog/wiki/cancel-form/" %}
{% endblock %}

{% block pagecontent %}
    {% if redirect == False %}
        {% block dltqstmessage %}
            <div class="text-center">
                <h2 class="font-bold text-danger">{{ _("You are going to cancel the data collection") }} "{{ assessmentData.ass_desc }}"</h2>
                <p>
                <div class="error-desc">

                    <h3>{{ _("After you cancel this data collection all data will be lost") }}</h3>
                    <h3>{{ _("Are you sure that you want to cancel the ongoing data collection?") }}</h3>
                </div>
                <form class="form-horizontal" role="form" method="post" action="{{ request.path }}">
                    <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                    <a class="btn btn-default" href="{{ request.route_url('dashboard') }}"> {{ _("Go back") }}</a><br><br>
                    <button class="btn btn-danger" type="submit" name="closeAssessment"> {{ _('Cancel data collection') }}</button>
                </form>
            </div>
        {% endblock dltqstmessage %}
    {% endif %}
{% endblock %}

{% if redirect == True %}
    {% block toastr %}
        {# Overwrite the toaster so it does not trigger the popup #}
    {% endblock toastr %}
{% endif %}

{% block script %}
    {% if redirect == True %}
        {# If a new question is just added or edited then redirect the mainwindo to such project #}
        <script>
            window.top.location.href = "{{ request.route_url('dashboard') }}";
        </script>
    {% endif %}
{% endblock script %}