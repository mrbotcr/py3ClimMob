
{% if request.registry.settings.get("google.analytics", "false") != "false" %}

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ request.registry.settings.get("google.analytics", "false") }}"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '{{request.registry.settings.get("google.analytics", "false")}}', {'anonymize_ip': true});
    </script>

{% endif %}